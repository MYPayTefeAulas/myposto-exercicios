<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formasPagamento_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pagamento.FormasPagamentoActivity">

    <Button
        android:id="@+id/formasPagamento_btCredito"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/btn_marginStart"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="@dimen/btn_marginEnd"
        android:text="@string/cartao_de_credito"
        android:textSize="@dimen/big_btn_txtSize"
        app:icon="@drawable/ic_baseline_credit_card_24"
        app:layout_constraintBottom_toTopOf="@+id/formasPagamento_btDebito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/formasPagamento_btDebito"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="16dp"
        android:text="@string/cartao_de_debito"
        android:textSize="@dimen/big_btn_txtSize"
        app:icon="@drawable/ic_baseline_credit_card_24"
        app:layout_constraintBottom_toTopOf="@+id/formasPagamento_btDinheiro"
        app:layout_constraintEnd_toEndOf="@+id/formasPagamento_btCredito"
        app:layout_constraintStart_toStartOf="@+id/formasPagamento_btCredito"
        app:layout_constraintTop_toBottomOf="@+id/formasPagamento_btCredito" />

    <Button
        android:id="@+id/formasPagamento_btDinheiro"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="212dp"
        android:text="@string/dinheiro"
        android:textSize="@dimen/big_btn_txtSize"
        app:icon="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/formasPagamento_btDebito"
        app:layout_constraintStart_toStartOf="@+id/formasPagamento_btDebito"
        app:layout_constraintTop_toBottomOf="@+id/formasPagamento_btDebito" />
</androidx.constraintlayout.widget.ConstraintLayout>